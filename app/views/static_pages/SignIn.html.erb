<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
 <%= csrf_meta_tags %>

<div class="row heading-row">
  <center><h1>Please SignUp</h1><hr style="width:30%;"> </center>
</div>
<div class="left-side">
  <!--Half of the page -->

</div>
<div class="right-side" >
  <div class="container signin-form">
            <div class="row form-container">

                <div class="col-md-8 contact-form">

                    <form class="ajax-form" id="contactForm">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Your Name..." value="" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Your email..." value="" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Your password..." value="" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="cpassword" name="cpassword" placeholder="Confirm password..." value="" required>
                        </div>
                        <div class="row checkboxesrow">
                          <div class="col-md-4">
                      			<div class="radio checkboxes">
                        				<label><input type="radio" name="doctor">Doctor</label>
                      			</div>
                      		</div>
                      		<div class="col-md-4 ">
                      			<div class="radio checkboxes">
                       			 	<label><input type="radio" name="patient">Patient</label>
                      			</div>
                      		</div>
                          <!--<div class="col-md-2 checkboxes">
                          <%= check_box_tag(:doctor) %>
                          <%= label_tag(:pet_dog, "Doctor") %>
                        </div>
                        <div class="col-md-2 checkboxes">
                        <%= check_box_tag(:patient) %>
                        <%= label_tag(:pet_dog, "Patient") %>
                      </div>
                    -->
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" class="btn btn-signin"><i class="fa fa-paper-plane fa-fw"></i> Sign UP</button>
                        </div>
                    </form>
                </div><!-- /.contact-form -->

            </div><!-- /.row -->
        </div><!-- /.container -->
</div>
