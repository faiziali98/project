       <!-- this part is the widgets -->
       <div class="custom-widgets">
          <div class="row-one">
               <div class="col-md-3 col-md-push-3  widget">
                   <div class="stats-left ">
                       <h5>Total</h5>
                       <h4> Views</h4>
                   </div>
                   <div class="stats-right">
                       <label>0</label>
                   </div>
                   <div class="clearfix"> </div>
               </div>
               <div class="col-md-3 col-md-push-3 widget states-mdl">
                   <div class="stats-left">
                       <h5>Total</h5>
                       <h4>Followers</h4>
                   </div>
                   <div class="stats-right">
                       <label><%=@doctor.followers.count%></label>
                   </div>
                   <div class="clearfix"> </div>
               </div>
               <div class="col-md-3 col-md-push-3 widget states-thrd">
                   <div class="stats-left">
                       <h5>Total</h5>
                       <h4>Appointments</h4>
                   </div>
                   <div class="stats-right">
                       <label><%=@doctor.appointments.count%></label>
                   </div>
                   <div class="clearfix"> </div>
               </div>
            <div class="clearfix"> </div>
           </div>
       </div>
       <!-- This is the personal info section -->
       <div class="profile-section-inner">
             <div class="col-md-6 col-md-push-3 profile-info">
            <h3 class="inner-tittle">Personal Information </h3>
            <div class="main-grid3">
               <div class="p-20">
              <div class="about-info-p">
                <strong>Full Name</strong>
                <br>
                <p class="text-muted"><%=@doctor.name%></p>
              </div>
              <div class="about-info-p">
                <strong>Mobile</strong>
                <br>
                <p class="text-muted"><% if @doctor.phone%><%@doctor.phone%><%else%><%"Please Add Phone Number"%><%end%></p>
              </div>
              <div class="about-info-p">
                <strong>Email</strong>
                <br>
                <p class="text-muted"><%=@doctor.email%></p>
              </div>
            </div>
        </div><br/>
