<div class="row">
    <div class="profile-section-inner">
          <div class="col-md-7 col-md-push-3 profile-info">
            <h3 class="inner-tittle">Search Doctors from Anywhere </h3>
            <div class="main-grid3">
                <div class="p-20">
                    <%= form_for (@search) do |f| %>
                        <div class="form-group">
                            <div class="about-info-p">
                                <strong>Name</strong>
                                <br/>
                                <%= f.text_field :name,class: 'form-control text-muted' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="about-info-p">
                                <strong>Gender</strong>
                                <br/>
                                <%= f.text_field :gender,class: 'form-control text-muted' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="about-info-p">
                                <strong>Area</strong>
                                <br/>
                                <%= f.text_field :area,class: 'form-control text-muted' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="about-info-p">
                                <strong>speciality</strong>
                                <br/>
                                <%= f.text_field :speciality,class: 'form-control text-muted' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Search", class: "btn btn-edit" %>
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
